{
  "_comment": "Build with `packer build openbsd.json -var-file openbsd58.json`",
  "builders": [
    {
      "boot_command": [
        "boot -s<enter>",
        "<wait10><wait10>",
        "S<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.em0 em0<enter><wait><wait><wait>",
        "ftp -o install.conf http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `install_path`}} && install -af install.conf && ",
        "echo \"permit nopass keepenv :wheel\" > /mnt/etc/doas.conf && reboot<enter>"
      ],
      "boot_wait": "6s",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "http/{{ user `preseed` }}"
      ],
      "guest_additions_mode": "disable",
      "guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "output_directory": "output-{{ user `vm_name` }}-virtualbox-iso",
      "shutdown_command": "doas shutdown -p now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"
        ],
        [
          "modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}"
    },
    {
      "boot_command": [
        "boot -s<enter>",
        "<wait10><wait10>",
        "S<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.em0 em0<enter><wait><wait><wait>",
        "ftp -o install.conf http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `install_path`}} && install -af install.conf && ",
        "echo \"permit nopass keepenv :wheel\" > /mnt/etc/doas.conf && reboot<enter>"
      ],
      "boot_wait": "6s",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "{{ user `vmware_guest_os_type` }}",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "output_directory": "output-{{ user `vm_name` }}-vmware-iso",
      "shutdown_command": "doas shutdown -p now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "",
      "type": "vmware-iso",
      "vm_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      }
    },
    {
      "boot_command": [
        "boot -s<enter>",
        "<wait10><wait10>",
        "S<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.em0 em0<enter><wait><wait><wait>",
        "ftp -o install.conf http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `install_path`}} && install -af install.conf && ",
        "echo \"permit nopass keepenv :wheel\" > /mnt/etc/doas.conf && reboot<enter>"
      ],
      "boot_wait": "6s",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "{{ user `parallels_guest_os_type` }}",
      "hard_drive_interface": "ide",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "output_directory": "output-{{ user `vm_name` }}-parallels-iso",
      "parallels_tools_mode": "disable",
      "prlctl": [
        [
          "set", "{{.Name}}", "--memsize", "{{ user `memory` }}"
        ],
        [
          "set", "{{.Name}}", "--cpus", "{{ user `cpus` }}"
        ],
        [
          "set", "{{.Name}}", "--device-set", "cdrom0", "--iface", "ide"
        ],
        [
          "set", "{{.Name}}", "--device-del", "fdd0"
        ],
        [
          "set", "{{.Name}}", "--device-del", "parallel0"
        ]
      ],
      "prlctl_version_file": ".prlctl_version",
      "shutdown_command": "doas shutdown -p now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "type": "parallels-iso",
      "vm_name": "{{ user `vm_name` }}"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "box/{{.Provider}}/{{user `vm_name`}}-{{user `version`}}.box",
      "type": "vagrant",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CM={{user `cm`}}",
        "CM_VERSION={{user `cm_version`}}",
        "CLEANUP_PAUSE={{user `cleanup_pause`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "OPENBSD_MIRROR={{user `openbsd_mirror`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "HOSTNAME={{user `vm_name`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "{{.Vars}} doas -u root sh -eux {{.Path}}",
      "scripts": [
        "script/openbsd/setup_pkg.sh",
        "script/update.sh",
        "script/openbsd/postinstall.sh",
        "script/vagrant.sh",
        "script/vmware.sh",
        "script/virtualbox.sh",
        "script/parallels.sh",
        "custom-script.sh",
        "script/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "cpus": "1",
    "custom_script": ".",
    "disk_size": "65536",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "headless": "",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "install_vagrant_key": "true",
    "iso_checksum": "",
    "iso_name": "",
    "iso_path": "/Volumes/Thunder/software/openbsd",
    "iso_url": "",
    "openbsd_mirror": "http://ftp.eu.openbsd.org/pub/OpenBSD/",
    "memory": "512",
    "no_proxy": "{{env `no_proxy`}}",
    "parallels_guest_os_type": "freebsd",
    "install_path": "install.conf.openbsd6x",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "ssh_fullname": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "false",
    "vagrantfile_template": "tpl/openbsd.rb",
    "version": "0.1.0",
    "virtualbox_guest_os_type": "OpenBSD_64",
    "vm_name": "openbsd58",
    "vmware_guest_os_type": "freebsd-64"
  }
}
